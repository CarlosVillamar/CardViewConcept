<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.android.CardViewConcept.googleSearch">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/TopicImagesSearch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true" />

        <TextView
            android:id="@+id/titleSearch"
            style="@style/TextAppearance.AppCompat.Headline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/TopicImagesSearch"
            android:layout_alignParentBottom="@id/TopicImagesSearch"
            android:background="@color/cardview_dark_background"
            android:padding="16dp"
            android:text="title"
            android:textColor="@color/backgroundCard"
            android:theme="@style/ThemeOverlay.AppCompat.Dark" />
        <!--  android:text="@string/title_placeholder"-->
        <TextView
            android:id="@+id/newsTitleSearch"
            style="@style/TextAppearance.AppCompat.Subhead"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/TopicImagesSearch"
            android:fontFamily="monospace"
            android:padding="16dp"
            android:text="@string/news_placeholder"
            android:textColor="?android:textColorSecondary"
            android:textStyle="bold" />

        <WebView
            android:id="@+id/subtitleSearch"
            style="@style/TextAppearance.AppCompat.Subhead"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/newsTitleSearch"
            android:text="@string/sports_info_placeholder" />

    </RelativeLayout>
</ScrollView>

